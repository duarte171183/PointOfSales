<h1>Listing Users</h1>
<% if current_user.has_role? :admin %>
  <%= link_to 'New User', new_user_path %>
<% end %>  
<table>
  <thead>
    <tr>
      <th>Alias</th>
      <th>Username</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.alias %></td>
        <td><%= user.username %></td>
        <td><%= user.email%></td>
        <% if current_user.has_role? :admin %>
          <td><%= link_to 'Show', user %></td>
          <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
