<h1>Listing Tickets</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Subtotal</th>
      <th>Total</th>
      <th>Pay with</th>
      <th>Change</th>
      <th>Total Products</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.subtotal %></td>
        <td><%= ticket.total %></td>
        <td><%= ticket.pay_with %></td>
        <td><%= ticket.change %></td>
        <td><%= link_to ticket.sales.count, ticket %></td>
        <% if current_user.has_role? :admin %>
          <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
          <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ticket', new_ticket_path %>
