<h2 >Log in</h2>

<div class="row">
<div class="col-md-6 col-md-offset-3 panel-footer">
  <section class="login-form">
   <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { :class => 'form-horizontal' }) do |f| %>
     <div class="input-group">
      <span class="input-group-addon" id="sizing-addon1"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
      <%= f.text_field :alias, autofocus: true, requiered: true, class: 'form-control  input-lg', placeholder: "Alias" %>
     </div>
     <br>
     <div class="input-group">
        <span class="input-group-addon" id="sizing-addon1"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
       <%= f.password_field :password, autocomplete: "off", class: 'form-control  input-lg', placeholder: "Password" %>
    </div>
    <br>
    <% if devise_mapping.rememberable? -%>
      <%= f.check_box :remember_me, class: "checkbox-inline"%>
      <%= f.label :remember_me %>
    <% end -%>
     <%= f.submit "Log in", class: "form-control btn btn-primary" %>
   <% end %>
   </section>
</div>
</div>

