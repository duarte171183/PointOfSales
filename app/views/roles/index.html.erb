<div class="page-header">
  <% if current_user.has_role? :admin %>
    <%= link_to 'New Role', new_role_path, class: "btn btn-primary pull-right" %>
  <% end %>  
  <h1>Listing Roles</h1>
</div>

<table>
  <thead>
    <tr>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.name %></td>
        <% if current_user.has_role? :admin %>
          <td><%= link_to 'Show', role %></td>
          <td><%= link_to 'Edit', edit_role_path(role) %></td> 
          <td><%= link_to 'Destroy', role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>